pipeline {
    agent none
    stages {
        stage('bitbucket') {
            steps {
                script {
                    echo "Building the application..."
                }
            }
        }
        stage('maven') {
            steps {
                script {
                    echo "Testing the application..."
                }
            }
        }
        stage('sonarkube') {
            steps {
                script {
                    echo "application will run test1"
                }
            }
        }
        stage('push to nexus') {
            steps {
                script {
                    echo "application will run test1"
                }
            }
        }
        stage('deploy in open shift') {
            steps {
                script {
                    echo "application will run test1"
                }
            }
        }
        stage('datadog') {
            steps {
                script {
                    echo "application will run test1"
                }
            }
        }
        
